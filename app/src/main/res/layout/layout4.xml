<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:id="@+id/img_04profilePicture"
        android:layout_column="0"
        android:layout_columnWeight="0"
        android:layout_rowSpan="3"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/btn_heart"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/lbl_04name"
        android:layout_alignTop="@+id/img_04profilePicture"
        android:layout_alignLeft="@+id/lbl_04organization"
        android:layout_alignStart="@+id/lbl_04organization"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Organization:"
        android:id="@+id/lbl_04organization"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_alignBottom="@+id/img_04profilePicture"
        android:layout_toRightOf="@+id/lbl_04number"
        android:layout_toEndOf="@+id/lbl_04number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Skills:"
        android:id="@+id/lbl_04skills"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/img_04profilePicture"
        android:layout_alignLeft="@+id/img_04profilePicture"
        android:layout_alignStart="@+id/img_04profilePicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile number:"
        android:id="@+id/lbl_04number"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/txt_04description"
        android:layout_alignLeft="@+id/lbl_04skills"
        android:layout_alignStart="@+id/lbl_04skills" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About me:"
        android:id="@+id/lbl_04description"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/lbl_04number"
        android:layout_alignStart="@+id/lbl_04number" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_04name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/lbl_04name"
        android:layout_toEndOf="@+id/lbl_04name"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/lbl_04name"
        android:layout_alignTop="@+id/lbl_04name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Job:"
        android:id="@+id/lbl_04job"
        android:layout_above="@+id/txt_04organization"
        android:layout_toRightOf="@+id/lbl_04number"
        android:layout_toEndOf="@+id/lbl_04number" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_04job"
        android:layout_toRightOf="@+id/lbl_04job"
        android:layout_toEndOf="@+id/lbl_04job"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignTop="@+id/lbl_04job" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_04organization"
        android:layout_toRightOf="@+id/lbl_04organization"
        android:layout_toEndOf="@+id/lbl_04organization"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/lbl_04skills" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_04skills"
        android:layout_toRightOf="@+id/lbl_04skills"
        android:layout_toEndOf="@+id/lbl_04skills"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@+id/lbl_04skills" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_04number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lbl_04number"
        android:layout_toEndOf="@+id/lbl_04number"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignTop="@+id/lbl_04number" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_04description"
        android:layout_toRightOf="@+id/lbl_04description"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@+id/lbl_04description" />

</RelativeLayout>