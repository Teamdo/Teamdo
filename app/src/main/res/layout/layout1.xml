<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:id="@+id/img_01profilePicture"
        android:layout_column="0"
        android:layout_columnWeight="0"
        android:layout_rowSpan="3"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/lbl_01name"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_alignBottom="@+id/txt_01name"
        android:layout_alignRight="@+id/lbl_01carrier"
        android:layout_alignEnd="@+id/lbl_01carrier"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_01name"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lbl_01name"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Carrier:"
        android:id="@+id/lbl_01carrier"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_alignBottom="@+id/txt_01carrier"
        android:layout_toRightOf="@+id/img_01profilePicture"
        android:layout_toEndOf="@+id/img_01profilePicture"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_01carrier"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_below="@+id/lbl_01name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignLeft="@+id/txt_01name"
        android:layout_margin="5px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Organization:"
        android:id="@+id/lbl_01organization"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_alignBottom="@+id/txt_01organization"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_01organization"
        android:layout_row="2"
        android:layout_column="3"
        android:allowUndo="false"
        android:layout_below="@+id/img_01profilePicture"
        android:layout_toRightOf="@+id/lbl_01organization"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Skills:"
        android:id="@+id/lbl_01skills"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_alignBottom="@+id/txt_01skills"
        android:layout_alignLeft="@+id/lbl_01organization"
        android:layout_alignStart="@+id/lbl_01organization"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_01skills"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_below="@+id/lbl_01organization"
        android:layout_toRightOf="@+id/lbl_01skills"
        android:layout_alignRight="@+id/txt_01carrier"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile number:"
        android:id="@+id/lbl_01number"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/lbl_01organization"
        android:layout_alignStart="@+id/lbl_01organization"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_01number"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/lbl_01number"
        android:layout_toEndOf="@+id/lbl_01number"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About me:"
        android:id="@+id/lbl_01description"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_alignBottom="@+id/txt_01description"
        android:layout_alignLeft="@+id/lbl_01number"
        android:layout_alignStart="@+id/lbl_01number"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_01description"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_below="@+id/lbl_01number"
        android:layout_alignRight="@+id/txt_01skills"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/lbl_01description"
        android:layout_toEndOf="@+id/lbl_01description" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matches"
        android:id="@+id/btn_01matches"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="630dp" />

</RelativeLayout>