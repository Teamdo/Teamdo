<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Projektbeschreibung: "
        android:id="@+id/lbl_02projektbeschreibung"
        android:layout_below="@+id/txt_02projekttitel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Skills: "
        android:id="@+id/lbl_02skills"
        android:layout_below="@+id/lbl_02projektbeschreibung2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_02projektbeschreibung2"
        android:layout_weight="0.38"
        android:background="#eae5e5"
        android:height="150dp"
        android:layout_below="@+id/lbl_02projektbeschreibung"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Projekttitel: "
        android:id="@+id/lbl_02projekttitel"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_02projekttitel"
        android:linksClickable="false"
        android:layout_below="@+id/lbl_02projekttitel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_02skills"
        android:layout_below="@+id/lbl_02skills"
        android:layout_alignLeft="@+id/lbl_02skills"
        android:layout_alignRight="@+id/txt_02freieplaetze"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hinzufügen"
        android:id="@+id/btn_02addSkills"
        android:layout_alignBottom="@+id/txt_02skills"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#7db9e8"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/btn_02ok"
        android:layout_alignStart="@+id/btn_02ok" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Freie Plätze: "
        android:id="@+id/lbl_02freieplaetze"
        android:layout_below="@+id/txt_02skills"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_02freieplaetze"
        android:layout_below="@+id/btn_02addSkills"
        android:layout_toRightOf="@+id/lbl_02freieplaetze"
        android:layout_alignRight="@+id/lbl_02projektbeschreibung"
        android:layout_alignEnd="@+id/lbl_02projektbeschreibung" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btn_02delete"
        android:background="#7db9e8"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txt_02freieplaetze"
        android:layout_toStartOf="@+id/txt_02freieplaetze"
        android:layout_marginBottom="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/btn_02ok"
        android:background="#7db9e8"
        android:layout_alignTop="@+id/btn_02delete"
        android:layout_toRightOf="@+id/lbl_02projektbeschreibung"
        android:layout_toEndOf="@+id/lbl_02projektbeschreibung"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

</RelativeLayout>